<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <ImageView
        android:id="@+id/img_header_profile"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/shadow2"
        android:padding="20dp"
        android:src="@drawable/ic_baseline_person_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:maxLines="1"
        android:text="곽나연"
        android:textColor="@color/black"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_header_profile"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/emailTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:maxLines="2"
        android:text="nani@gmail.com"
        android:textColor="@color/black"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titleTextView"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/height"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/main_color"
        android:gravity="center"
        android:text="키 : 170cm "
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/emailTextView"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/weight"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/main_color"
        android:gravity="center"
        android:text="몸무게 : 40kg"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/height"
        tools:ignore="HardcodedText" />

    <ImageView
        android:id="@+id/iv_sign_up_face"
        android:layout_width="180dp"
        android:layout_height="250dp"
        android:layout_marginTop="23dp"
        android:background="@drawable/shadow2"
        app:layout_constraintEnd_toStartOf="@+id/iv_edit_user_data_body"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/weight" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="얼굴 사진"
        app:layout_constraintEnd_toEndOf="@id/iv_sign_up_face"
        app:layout_constraintStart_toStartOf="@id/iv_sign_up_face"
        app:layout_constraintTop_toBottomOf="@id/iv_sign_up_face"
        tools:ignore="HardcodedText" />

    <ImageView
        android:id="@+id/iv_edit_user_data_body"
        android:layout_width="180dp"
        android:layout_height="250dp"
        android:background="@drawable/shadow2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_sign_up_face"
        app:layout_constraintTop_toTopOf="@id/iv_sign_up_face" />

    <TextView
        android:id="@+id/body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="전신 사진"
        app:layout_constraintEnd_toEndOf="@id/iv_edit_user_data_body"
        app:layout_constraintStart_toStartOf="@id/iv_edit_user_data_body"
        app:layout_constraintTop_toBottomOf="@id/iv_edit_user_data_body"
        tools:ignore="HardcodedText" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/editProfileButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:background="@drawable/radius_pink2_border"
        android:text="프로필 수정"
        android:textStyle="bold"
        android:textColor="@color/main_color_2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/body"
        tools:ignore="HardcodedText" />


</androidx.constraintlayout.widget.ConstraintLayout>