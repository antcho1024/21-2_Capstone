<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".closet.AddImageActivity">

    <ImageView
        android:id="@+id/photoImage"
        android:layout_width="250dp"
        android:layout_height="300dp"
        android:background="@drawable/border"
        android:layout_marginTop="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/addImageButton"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:background="@drawable/ic_baseline_add_a_photo_24"
        app:layout_constraintEnd_toEndOf="@+id/photoImage"
        app:layout_constraintStart_toStartOf="@id/photoImage"
        app:layout_constraintTop_toTopOf="@id/photoImage"
        app:layout_constraintBottom_toBottomOf="@id/photoImage" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

    <CheckBox
        android:layout_marginTop="40dp"
        android:id="@+id/topCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="상의"
        app:layout_constraintEnd_toStartOf="@id/pantsCheckBox"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/photoImage"
        tools:layout_editor_absoluteX="27dp"
        tools:layout_editor_absoluteY="408dp"
        tools:ignore="HardcodedText" />

    <CheckBox
        android:id="@+id/pantsCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="하의"
        app:layout_constraintEnd_toStartOf="@id/accessoryCheckBox"
        app:layout_constraintStart_toEndOf="@+id/topCheckBox"
        app:layout_constraintTop_toTopOf="@id/topCheckBox"
        tools:ignore="HardcodedText" />

    <CheckBox
        android:id="@+id/accessoryCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="액세서리"
        app:layout_constraintEnd_toStartOf="@+id/shoesCheckBox"
        app:layout_constraintStart_toEndOf="@id/pantsCheckBox"
        app:layout_constraintTop_toTopOf="@id/topCheckBox"
        tools:layout_editor_absoluteX="243dp"
        tools:layout_editor_absoluteY="406dp"
        tools:ignore="HardcodedText" />

    <CheckBox
        android:id="@+id/shoesCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="슈즈"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/accessoryCheckBox"
        app:layout_constraintTop_toTopOf="@id/topCheckBox"
        tools:layout_editor_absoluteX="311dp"
        tools:layout_editor_absoluteY="404dp"
        tools:ignore="HardcodedText" />

    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topCheckBox"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="40dp"
        android:text="완료"
        tools:ignore="HardcodedText" />


</androidx.constraintlayout.widget.ConstraintLayout>