<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:paddingHorizontal="20dp"
    android:paddingVertical="30dp"
    tools:context=".SignUpActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="ScrollViewSize">

        <TextView
            android:id="@+id/usernameTextView"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="이름 "
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/et_sign_up_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/radius_border"
            android:hint="이름 입력"
            android:maxLines="1"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/usernameTextView"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/userEmailTextView"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="이메일"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/usernameTextView"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/et_sign_up_email"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:background="@drawable/radius_border"
            android:hint="이메일 입력"
            android:maxLines="1"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/userEmailTextView"
            app:layout_constraintTop_toBottomOf="@id/et_sign_up_name"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/userPWTextView"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="비밀번호"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/userEmailTextView"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/et_sign_up_password"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:background="@drawable/radius_border"
            android:hint="비밀번호 입력"
            android:maxLines="1"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/userPWTextView"
            app:layout_constraintTop_toBottomOf="@id/et_sign_up_email"
            tools:ignore="HardcodedText" />


        <EditText
            android:id="@+id/et_sign_up_password_check"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:background="@drawable/radius_border"
            android:hint="비밀번호 확인"
            android:maxLines="1"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/userPWTextView"
            app:layout_constraintTop_toBottomOf="@id/et_sign_up_password"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/genderTextView"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="성별   "
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/et_sign_up_password_check"
            tools:ignore="HardcodedText" />

        <RadioGroup
            android:id="@+id/rg_sign_up_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="et_sign_up_password_check">

            <RadioButton
                android:id="@+id/rb_sign_up_man"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:layout_marginEnd="20dp"
                android:text="남"
                app:layout_constraintEnd_toStartOf="@id/rb_sign_up_woman"
                app:layout_constraintTop_toBottomOf="@id/et_sign_up_password_check"
                tools:ignore="HardcodedText" />

            <RadioButton
                android:id="@+id/rb_sign_up_woman"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:layout_marginEnd="10dp"
                android:text="여"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/et_sign_up_password_check"
                tools:ignore="HardcodedText" />

        </RadioGroup>


        <TextView
            android:id="@+id/bodySizeTextView"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="신체사이즈   "
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/genderTextView"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/et_sign_up_cm"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/radius_border"
            android:maxLines="1"
            android:padding="10dp"
            app:layout_constraintEnd_toStartOf="@+id/cm"
            app:layout_constraintTop_toBottomOf="@id/rg_sign_up_gender" />

        <TextView
            android:id="@+id/cm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="20dp"
            android:text="cm"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@id/et_sign_up_kg"
            app:layout_constraintTop_toBottomOf="@id/rg_sign_up_gender"
            tools:ignore="HardcodedText" />


        <EditText
            android:id="@+id/et_sign_up_kg"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/radius_border"
            android:maxLines="1"
            android:padding="10dp"
            app:layout_constraintEnd_toStartOf="@+id/kg"
            app:layout_constraintTop_toBottomOf="@id/rg_sign_up_gender" />

        <TextView
            android:id="@+id/kg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="10dp"
            android:text="kg"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rg_sign_up_gender"
            tools:ignore="HardcodedText" />

        <ImageView
            android:id="@+id/iv_sign_up_face"
            android:layout_width="180dp"
            android:layout_height="240dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/border"
            app:layout_constraintEnd_toStartOf="@+id/iv_sign_up_body"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bodySizeTextView" />

        <Button
            android:id="@+id/btn_sign_up_face"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/main_color_2"
            android:text="얼굴 사진 업로드"
            app:layout_constraintEnd_toEndOf="@id/iv_sign_up_face"
            app:layout_constraintStart_toStartOf="@id/iv_sign_up_face"
            app:layout_constraintTop_toBottomOf="@+id/iv_sign_up_face"
            tools:ignore="HardcodedText" />

        <ImageView
            android:id="@+id/iv_sign_up_body"
            android:layout_width="180dp"
            android:layout_height="240dp"
            android:layout_marginStart="5dp"
            android:background="@drawable/border"
            app:layout_constraintBottom_toBottomOf="@id/iv_sign_up_face"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_sign_up_face" />


        <Button
            android:id="@+id/btn_sign_up_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/main_color_2"
            android:text="전신 사진 업로드"
            app:layout_constraintEnd_toEndOf="@id/iv_sign_up_body"
            app:layout_constraintStart_toStartOf="@id/iv_sign_up_body"
            app:layout_constraintTop_toTopOf="@+id/btn_sign_up_face"
            tools:ignore="HardcodedText" />


        <Button
            android:id="@+id/btn_sign_up_pass"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/main_color"
            android:text="회원가입 완료"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_sign_up_body"
            tools:ignore="HardcodedText" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>